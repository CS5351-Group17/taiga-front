{
  "name": "Taiga Frontend Development (amd64)",
  
  "image": "node:16.19.1",
  
  "runArgs": ["--platform=linux/amd64"],
  
  "forwardPorts": [9001],
  
  "postCreateCommand": "mkdir -p ~/.ssh && ssh-keyscan github.com >> ~/.ssh/known_hosts && npm install",
  
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "christian-kohler.path-intellisense",
        "streetsidesoftware.code-spell-checker"
      ],
      
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "editor.formatOnSave": false,
        "files.eol": "\n"
      }
    }
  },
  
  "remoteUser": "node"
}